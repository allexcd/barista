{
  "$schema": "../../node_modules/@angular-devkit/architect/src/builders-schema.json",
  "builders": {
    "stylelint": {
      "implementation": "./stylelint/index",
      "schema": "./stylelint/schema.json",
      "description": "Run stylelint against all style files."
    },
    "typescript": {
      "implementation": "./typescript/index",
      "schema": "./typescript/schema.json",
      "description": "Compile typescript files."
    },
    "packager": {
      "implementation": "./packager/index",
      "schema": "./packager/schema.json",
      "description": "Run packaging steps"
    },
    "elements": {
      "implementation": "./elements/index",
      "schema": "./elements/schema.json",
      "description": "Run individual element builds and package them into one publishable library"
    }
  }
}
